# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git - it contains sensitive information

# Required: Google Gemini API Key
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: USDA Food Database API Key
# Register at: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your_usda_api_key_here

# Optional: Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/labelpadega

# Optional: Cache Settings
# CACHE_DIR=~/.labelpadega_cache
# CACHE_TTL=3600

# Optional: Feature Flags
# ENABLE_MEDICINE_SCANNER=true
# ENABLE_ADVANCED_ANALYTICS=false

# Optional: Logging
# LOG_LEVEL=INFO
# LOG_FILE=app.log

# Optional: Deployment Settings
# ENVIRONMENT=production
# DEBUG=false

# Optional: Email Configuration (for alerts)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_EMAIL=admin@example.com
